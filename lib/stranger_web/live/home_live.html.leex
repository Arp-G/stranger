<section>
  <h1>Stranger - Find your next pen friend</h1>

  <%= if @section == 0 do %>
    <%= live_component @socket, StrangerWeb.LoginFormComponent, id: :login %>
  <% else %>
    <%= live_component @socket, StrangerWeb.RegistrationFormComponent, changeset: @changeset, section: @section, uploads: @uploads %>
    <p>
      <%= if @section == 2 do %>
        <button class="btn btn-primary" phx-click="prev">Back</button>
      <% end %>
      <%= if @section == 1 do %>
        <button class="btn btn-primary" phx-click="next">Next</button>
      <% end %>
    </p>
  <% end %>
</section>
